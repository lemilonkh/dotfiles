[
  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-/": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Project",
    "bindings": {
      "ctrl-n": "project_panel::NewFile",
      "a": "project_panel::NewFile"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock",
      "ctrl-n": "workspace::NewTerminal"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space c": ["workspace::SendKeystrokes", ":"],
      "space g g": "task::Spawn",
      // "space g g": ["workspace::SendKeystrokes", "alt-shift-t enter"],
      "space /": ["workspace::SendKeystrokes", "ctrl-shift-f"],
      "space space": "file_finder::Toggle",
      "space e": "project_panel::ToggleFocus",
      "space g r": "editor::RevertSelectedHunks",
      "space g h r": "editor::RevertSelectedHunks",
      "space z": "workspace::ToggleZoom",
      "g r": "editor::FindAllReferences",
      "g f": "editor::OpenExcerpts",
      "g e": "editor::OpenExcerpts"
    }
  }
]
